<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lifecode.mybatis.mapper.UserMapper">

	<sql id="sqlUserFields">
		a.user_id
		,a.password
		,a.type
		,a.full_name
		,a.email
		,a.occupation
		,a.company_name
		,a.phone
		,a.address
		,a.city
		,a.country
		,a.linkedin
		,a.facebook
		,a.twitter
		,a.instagram
		,a.user_type_cd
		,a.avatar_path
		,a.join_date
		,a.note
	</sql>

	<select id="getUserById" resultType="com.lifecode.mybatis.entity.User">
		SELECT
		<include refid="sqlUserFields"></include>
		FROM USERS A
		WHERE A.USER_ID = #{user_id}
	</select>
</mapper>